<% @viewTitle = "ユーザー一覧" %>
<h2 class="mb-3">ユーザー一覧</h2>
<table class="table table-striped table-hover">
  <tr>
    <td></td>
    <td>ユーザー名</td>
    <td class="text-center">フォロー</td>
    <td class="text-center">フォロワー</td>
    <td></td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td class="align-middle"><img class="rounded-circle img-fluid" width="50" src="/images/<%= h user['image'] %>"></td>
    <td class="align-middle"><%= h user['name'] %></td>
    <td class="text-center align-middle"><%= user['following_count'] %></td>
    <td class="text-center align-middle"><%= user['followed_count'] %></td>
    <td class="align-middle"><a class="btn btn-info" href="/users/<%= user['id'] %>">詳細</a></td>
  </tr>
  <% end %>
</table>